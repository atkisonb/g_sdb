<%- model_class = MarketOrder -%>
<div class="page-header">
  <h1><%=t '.title', :default => MarketOrder %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:bid) %></dt>
      <dd><pre class="prettyprint"><%= @market_order.bid %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ask) %></dt>
      <dd><pre class="prettyprint"><%= @market_order.ask %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:exchange_order_number) %></dt>
      <dd><pre class="prettyprint"><%= @market_order.exchange_order_number %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              market_orders_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_market_order_path(@market_order), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              market_order_path(@market_order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

