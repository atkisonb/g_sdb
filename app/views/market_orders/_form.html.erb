<%= form_for @market_order, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :bid, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :bid, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ask, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :ask, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :exchange_order_number, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :exchange_order_number, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  market_orders_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
